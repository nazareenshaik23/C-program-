#include <stdio.h>

int main() 
{
    int h=3;
    int m=38;
    int s=0;
    while(1)
    {
        printf("%02d, %02d, %02d",h,m,s);
        leep(1);
        system("clc");
        s=s+1;
        if(s==0)
        {
            s=0;
            m=m+1;
        }
        else if(m==60)
        {
            s=0;
            m=0;
            h=h+1;
        }
        else
        {
            s=0;
            m=0;
            h=0;
        }
    }
}
